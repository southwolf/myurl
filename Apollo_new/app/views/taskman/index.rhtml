          document.write(blank+"<font id='arrow"+"<%=index%>4'"+" color='#f2f2f0'>→</font>"+"<a class='clsChild' href=\"javascript:scriptManager("+"'<%=task.name%>'"+",'<%=task.id%>'"+",'<%=index%>'"+")\">脚本管理</a><br>");
          document.write(blank+"<font id='arrow"+"<%=index%>5'"+" color='#f2f2f0'>→</font>"+"<a class='clsChild' href=\"javascript:templateManager("+"'<%=task.name%>'"+",'<%=task.id%>'"+",'<%=index%>'"+")\">模板管理</a><br>");
          document.write(blank+"<font id='arrow"+"<%=index%>6'"+" color='#f2f2f0'>→</font>"+"<a class='clsChild' href=\"javascript:xsltManger("+"'<%=task.name%>'"+",'<%=task.id%>'"+",'<%=index%>'"+")\">表样发布</a><br>");
          document.write(blank+"<font id='arrow"+"<%=index%>7'"+" color='#f2f2f0'>→</font>"+"<a class='clsChild' href=\"javascript:articleManger("+"'<%=task.name%>'"+",'<%=task.id%>'"+",'<%=index%>'"+")\">报告管理</a><br>");
          document.write(blank+"<font id='arrow"+"<%=index%>8'"+" color='#f2f2f0'>→</font>"+"<a class='clsChild' href=\"javascript:tasktimeManager("+"'<%=task.name%>'"+",'<%=task.id%>'"+",'<%=index%>'"+")\">任务时间</a><br>");
          document.write(blank+"<font id='arrow"+"<%=index%>9'"+" color='#f2f2f0'>→</font>"+"<a class='clsChild' href=\"javascript:visibleManager("+"'<%=task.name%>'"+",'<%=task.id%>'"+",'<%=index%>'"+")\">可见性设置</a></br>");
