          document.write("<div id='p" + "<%=index%>" + "Child'" + " class='child'>");
          document.write(blank+"<font id='arrow"+"<%=index%>1'"+" color='#f2f2f0'>→</font>"+"<a class='clsChild' href=\"javascript:addressInfoManager("+"'<%=task.name%>'"+",'<%=task.id%>'"+",'<%=index%>'"+")\">催报管理</a><br>");
          document.write(blank+"<font id='arrow"+"<%=index%>2'"+" color='#f2f2f0'>→</font>"+"<a class='clsChild' href=\"javascript:unitManger("+"'<%=task.name%>'"+",'<%=task.id%>'"+",'<%=index%>'"+")\">单位管理</a><br>");
