<script language="javascript">

    //修改用户
    function modifyUser()
    {
      if(!validateUser() || !validateGroup() || !validateRole())
      {
          return false;
      }

    if(form1.userName.value=="" && form1.userName.value != "")
    {
     alert("该账号已经存在，请重新输入！")
     return false;
    }

      form1.operation.value = "";
      window.opener.name = "userList";
      form1.submit();
      window.close();
}

    //修改当前登录用户
    function modifySelf()
    {
      if(!validateUser())
      {
          return false;
      }

    if(form1.userName.value=="" && form1.userName.value != "")
    {
     alert("该账号已经存在，请重新输入！")
     return false;
    }
      window.opener.setNotice('操作完毕');
      form1.operation.value = "";
      form1.target = "_self";
      form1.submit();
}

function initUser(){
  //基本信息
  form1.userName.value = "";
