//验证组
function validateGroup()
{
     if(isNull(form1.roleid.value))
      {
        alert("请选择角色");
        setTabIndex(2);
        form1.roleid.focus();
        return false;
      }
     return true;
}

//验证角色
function validateRole()
{
      form1.groupIDs.value = formAllOptionIds("selSelectedUsers");
      form1["user[memo]"].value = trim(form1["user[memo]"].value);
      return true;
}

//新建用户
function createUser()
{
