<table  border="1" cellpadding="2" cellspacing="0" bordercolor="#999999" width=90%>
	<tr class="exebar">
		<th>序号</th>
		<th>好友</th>
		<th>菜地号</th>
		<th>菜名</th>
		<th>距离执行时间</th>
	</tr>
	<% index = 1%>
	<% for task in @tasks %>
		<tr>
			<td align="center"><%= index %></td>
			<td><%=task.kaixinfriendname%></td>
			<td><%=task.farmnum%></td>
			<td><%=task.fruitname%></td>
			<td><%=distance_of_time_in_words1(task.occurtime)%></td>
		</tr>
		<% index += 1 %>
	<% end %>
</table>